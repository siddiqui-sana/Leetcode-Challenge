class Solution:
    def arrayNesting(self, nums: List[int]) -> int:
        ans = cnt = 0
        for idx in range(len(nums)):
            if idx == -1:
                continue                           # avoid revisit
            while nums[idx]!=-1:
                cnt, nums[idx], idx = cnt+1, -1, nums[idx] 
            else:    
                ans, cnt = max(ans, cnt), 0                # record length and reset cnt
        return ans
